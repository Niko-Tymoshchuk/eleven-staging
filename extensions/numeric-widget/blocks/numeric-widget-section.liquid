

{{ "widget-section-style.css" | asset_url | stylesheet_tag }}
<script src="{{ "widget-section.js" | asset_url }}" defer></script>

{% schema %}
{
  "name": "Numeric Widget Section",
  "target": "section",
  "class": "numerology-widget",
  "settings": [
    {
      "type": "header",
      "content": "Widget Settings"
    },
    {
      "type": "image_picker",
      "id": "widget_icon",
      "label": "Icon"
    },
    {
      "type": "text",
      "id": "widget_title",
      "label": "Title",
      "default": "Discover Your Number"
    },
    {
      "type": "textarea",
      "id": "widget_description",
      "label": "Description",
      "default": "Enter your information to find your Life Path number."
    },
    {
      "type": "color",
      "id": "widget_text_color",
      "label": "Text Color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "widget_bg_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "text",
      "id": "submit_button_text",
      "label": "Submit Button Text",
      "default": "Calculate"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Button Background Color",
      "default": "#007bff"
    },
    {
      "type": "color",
      "id": "loader_color",
      "label": "Loader Color",
      "default": "#cccccc"
    }
  ]
}
{% endschema %}

<section class="numerology-widget">
  <div class="container">
    <div class="icon-wrapper">
      <img src="{{ "main-icon.svg" | asset_url }}" width="184" height="96" alt="Numerology Icon" class="numerology-icon" />
    </div>

    <!-- Description -->
    <div class="numerology-description">
      <p>Learn how your life will unfold and who you are meant to be. Numerology is the language of the Universe. Are you ready to listen?</p>
    </div>

    <!-- Form -->
    <form action="/calculate-number" method="POST" class="numerology-form">
      <div class="form-group">
        <input type="text" name="full_name" placeholder="YOUR FULL NAME" required />
      </div>
      <div class="form-group">
        <input type="date" name="date_of_birth" placeholder="ENTER YOUR DATE OF BIRTH" required />
      </div>
      <button type="submit" class="calculate-button">CALCULATE MY NUMBER</button>
    </form>
  </div>
</section>

<style>
  .numerology-widget {
    background-size: cover;
    text-align: center;
    padding: 40px;
  }
  .numerology-description p {
    font-size: 1.2rem;
    margin-bottom: 20px;
    color: #fff;
  }
  .numerology-form {
    display: inline-block;
    max-width: 400px;
    width: 100%;
  }
  .form-group {
    margin-bottom: 15px;
  }
  .form-group input {
    width: 100%;
    padding: 10px;
    font-size: 1rem;
    border: 1px solid #ccc;
  }
  .calculate-button {
    width: 100%;
    padding: 12px;
    font-size: 1rem;
    background-color: #000;
    color: #fff;
    border: none;
    cursor: pointer;
  }
  .calculate-button:hover {
    background-color: #333;
  }
</style>



{{ "widget-section-style.css" | asset_url | stylesheet_tag }}
<script src="{{ "widget-section.js" | asset_url }}" defer></script>

{% schema %}
{
  "name": "Numeric Widget Section",
  "target": "section",
  "settings": [
    {
      "type": "header",
      "content": "Widget Settings"
    },
    {
      "type": "image_picker",
      "id": "widget_icon",
      "label": "Icon"
    },
    {
      "type": "text",
      "id": "widget_title",
      "label": "Title",
      "default": "Discover Your Number"
    },
    {
      "type": "textarea",
      "id": "widget_description",
      "label": "Description",
      "default": "Enter your information to find your Life Path number."
    },
    {
      "type": "font_picker",
      "id": "widget_font",
      "label": "Font"
    },
    {
      "type": "color",
      "id": "widget_text_color",
      "label": "Text Color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "widget_bg_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "text",
      "id": "submit_button_text",
      "label": "Submit Button Text",
      "default": "Calculate"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Button Background Color",
      "default": "#007bff"
    },
    {
      "type": "color",
      "id": "loader_color",
      "label": "Loader Color",
      "default": "#cccccc"
    }
  ]
}
{% endschema %}

<div style="background-color: {{ section.settings.widget_bg_color }}; font-family: {{ section.settings.widget_font }}; color: {{ section.settings.widget_text_color }};">
  <img src="{{ section.settings.widget_icon | img_url: '100x100' }}" width="100px" height="100px" alt="Widget Icon" />
  <h2>{{ section.settings.widget_title }}</h2>
  <p>{{ section.settings.widget_description }}</p>
  <form>
    <button type="submit" style="background-color: {{ section.settings.button_bg_color }}; color: {{ section.settings.button_text_color }};">
      {{ section.settings.submit_button_text }}
    </button>
    <div class="loader" style="background-color: {{ section.settings.loader_color }};"></div>
  </form>
</div>
